var a := ReadLines('\\Mac\Home\Desktop\помойка\да ну нахуй\17data\17-2.txt').Select(t -> t.ToInteger).ToArray;

var max := -20000;
var pos := 0;
for var i := 1 to a.Cnt-2 do 
begin
  if a[i] > max then
    max := a[i];
    pos := i;
  if a[i+1] > max then s
    max := a[i + 1];
    pos := i;
  
end;

print(max, pos);
