uses school;
assign(input, 'C:\Users\user\Desktop\ege2021kp (18.05.2021)\26data\26-48.txt');
var n := Readlninteger;
var a := ReadArrInteger(n); 
a.Sort;
var mn := maxint;
for var i := 0 to a.Cnt-2 do
  for var j := i+1 to a.Cnt-1 do
    if ((a[i]+a[j]) mod 2 = 0) then 
      begin
        var f := (a[i]+a[j]) div 2;
        var k := f - a[i];
        mn := min(mn,f)
  end;
  pr(mn)
