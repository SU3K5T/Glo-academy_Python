var a := ReadLines('\\Mac\Home\Desktop\помойка\да ну нахуй\17data\17-3.txt').Select(t -> t.ToInteger).ToArray;

var count := 0;

var max := a[1];
for var i := 0 to a.Cnt-2 do 
begin
  if (((a[i] + a[i + 1]) mod 2) = 0) and (((a[i] + a[i + 1]) mod 10) <> 6) then
  begin
    count := count + 1;
    var sr := trunc((a[i] + a[i + 1]) / 2);
    if sr > max then
      sr := max;
  end;
end;

print(count, max)
