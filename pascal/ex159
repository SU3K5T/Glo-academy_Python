var a := ReadLines('\\Mac\Home\Desktop\помойка\да ну нахуй\17data\17-3.txt').Select(t -> t.ToInteger).ToArray;

var count := 0;
var maxS := -10001;

for var i := 0 to a.Cnt-2 do 
begin
  if ( ( (a[i] + a[i+1])  mod 3 ) = 0) and ( ( (a[i] + a[i + 1] ) mod 6 ) <> 0) and ( ( (a[i] * a[i + 1]) mod 10 ) = 8 ) then 
  begin
    count := count + 1;
    var s := a[i] + a[i + 1];
    if s > maxS then
    begin
      
      maxS := s; 
    end;
    
  end;
    
end;

print(count, maxS)
