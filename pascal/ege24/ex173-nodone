uses school;
var a := ReadAllText('C:\Users\user\Desktop\Поляков 08.12.2021\24data\24-173.txt');
var (z,k,max) := (0,0,int.MinValue);
for var i := 1 to a.Cnt-5 do
begin
  z += 1;
  if (a[i] = a[i+3]) and (a[i+1] = a[i+4]) and (a[i+2] = a[i+5]) then
    k += 1;
  if k > 0 then 
  begin
    if z > max then 
      max := z;
    k := 0;
    z := 0;
  end;
end;
print(max)
//  'A B    C   A    B   C'
//   I  +1 +2   +3  +4  +5
