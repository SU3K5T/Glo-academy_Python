uses school;
var a := ReadAllText('\\Mac\Home\Downloads\ege2022kp\24data\24-j7.txt ');
var (len, max,z) := (1,int.minValue,0);
for var i:=1 to a.Cnt-1 do
  if (a[i].ToString.ToI mod 2 = 0) and (a[i+1].ToString.ToI mod 2 = 0) then
    len += 1
  else 
  begin
    z := len;
    if z > max then 
      max := z;
    len := 1;
  end;
  print(max)
